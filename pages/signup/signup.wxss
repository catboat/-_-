page {
    background: #efeff4;
    min-height: 100%;
    flex: 1;
    display: flex;
    flex-direction: column;
    padding-top: 30rpx;
}

form {
    flex-grow: 1;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.sign-view {
    height: 88rpx;
    display: flex;
    background: #ffffff;
    margin-top: 32rpx;
    margin-left: 32rpx;
    margin-right: 32rpx;
    margin-bottom: auto;
}

.sign-view input {
    margin: 0 32rpx;
    height: 100%;
    color: black;
    font-size: 30rpx;
    width: 100%;
}

.sign-text {
    color: #B0BAC5;
    font-size: 24rpx;
    line-height: 33rpx;
    margin: 10rpx 64rpx;
}