page {
    justify-content: center;
    display: flex;
    align-items: center;
    width: 100%;
}

.loading-view {
    flex-direction: column;
    justify-content: center;
    display: flex;
    align-items: center;
    width: 100%;
}

.loader {
    margin-top: -100rpx;
    width: 220rpx;
    height: 220rpx;
    border: 8rpx solid #fff;
    border-radius: 50%;
    border-right-color: transparent;
    border-top-color: transparent;
    animation: loader 10s infinite ease-in-out alternate;
}

.loading-img {
    height: 200rpx;
    width: 200rpx;
    border-radius: 50%;
    margin-top: 10rpx;
    margin-left: 10rpx;
    background: url('data:image/png;base64,');
}

.loading-txt {
    margin-top: 20rpx;
    font-size: 40rpx;
}

@-webkit-keyframes loader {
    0% {
        -webkit-transform: rotate(0deg);
    }

    20% {
        -webkit-transform: rotate(720deg);
    }

    50% {
        -webkit-transform: rotate(1080deg);
    }

    100% {
        -webkit-transform: rotate(2000deg);
    }
}

@keyframes loader {
    0% {
        -webkit-transform: rotate(0deg);
    }

    20% {
        -webkit-transform: rotate(720deg);
    }

    50% {
        -webkit-transform: rotate(1080deg);
    }

    100% {
        -webkit-transform: rotate(2000deg);
    }
}